    private void btBuscarActionPerformed(java.awt.event.ActionEvent evt) {                                         
      String cpf = txtCPF.getText();
        
        try {
            ResultSet tabela = new Dao().exibirFicha(cpf);
            if (tabela.isBeforeFirst()){
                
            DefaultTableModel tablemodel = (DefaultTableModel) tbFicha.getModel();
            tablemodel.setRowCount(0);
            while(tabela.next()){
                String[] row = {tabela.getString("ficha.cod"),
                    tabela.getString("alergia"),
                    tabela.getString("condicao"),
                    tabela.getString("medicamento"),
                    tabela.getString("medico.nome"),
                    tabela.getString("hospital.nome"),
                    tabela.getString("emissao")
                };
                tablemodel.addRow(row);
            }
            }else{
                
                JOptionPane.showMessageDialog(null, "Nem uma ficha encontrada","Alert",JOptionPane.WARNING_MESSAGE);
            }
            
        } catch (ClassNotFoundException ex) {
            JOptionPane.showMessageDialog(null, " "+ex, " Erro", JOptionPane.ERROR_MESSAGE);
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(null, " "+ex, " Erro", JOptionPane.ERROR_MESSAGE);
        }
        
         

    }                                        

    private void btRecActionPerformed(java.awt.event.ActionEvent evt) {                                      
        String cpf = txtCPF.getText();
        new Relatorio(cpf).setVisible(true);
    }                                     

