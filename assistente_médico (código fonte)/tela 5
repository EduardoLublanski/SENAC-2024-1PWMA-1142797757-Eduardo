    private void tntCadastrarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        String alergia = textAlergia.getText(),
        condicao = textCondicao.getText(),
        CPF = textCPF.getText(),
        hospital = textHospital.getText(),
        medicamento = textMedicamento.getText(),
        crm = txtCRM.getText(),
        data = txtData.getText(),
        codigo = lblCodigo.getText();
        
        try {
            new Dao().cadastrarFicha(alergia, condicao, CPF, hospital, medicamento, crm, data, codigo);
            JOptionPane.showMessageDialog(null, "Ficha Cadastrada","Info",JOptionPane.INFORMATION_MESSAGE);
            textAlergia.setText("");
            textCondicao.setText("");
            textCPF.setText("");
            
            textMedicamento.setText("");
            v = (long) Math.floor(Math.random()*1000000);
        lblCodigo.setText(String.valueOf(v));
        } catch (ClassNotFoundException ex) {
            JOptionPane.showMessageDialog(null, "Linha de conexão"+ex, "Erro", JOptionPane.ERROR_MESSAGE);
        } catch (SQLException ex) {
            String erro = ex.toString();
            if(erro.contains("cod")){
              JOptionPane.showMessageDialog(null, "Insira um hospital válido", "Erro", JOptionPane.ERROR_MESSAGE);;
         
            } else if( erro.contains("cpf")){
                 JOptionPane.showMessageDialog(null, "Insira um cpf válido", "Erro", JOptionPane.ERROR_MESSAGE);;
         
            }
       }
        
    }                                            

