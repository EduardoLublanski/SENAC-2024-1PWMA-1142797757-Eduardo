    private void bntLoginActionPerformed(java.awt.event.ActionEvent evt) {                                         
     String crm = caixaLogin.getText();
        
        try { 
           int codigoexiste = new Dao().loginCRM(crm);
            if(codigoexiste == 1){
                new Menu(crm).setVisible(true);
                dispose();
            }
            else{
                JOptionPane.showMessageDialog(null, "CRM n√£o encontrado","Erro",JOptionPane.ERROR_MESSAGE);
            }
            caixaLogin.setText("");
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(null, ex);
        } catch (ClassNotFoundException ex) {
            JOptionPane.showMessageDialog(null, ex);
        }
             
        
        
    }                                        

